<div class="form-group">
	<label for="sms" class="col-sm-2 control-label">
	SMS Notificaiton Number</label>
	<div class="col-sm-4">
		<input type="text" class="form-control" id="sms" value="{{sms}}">
	</div>
</div>

<div class="form-group">
	<label for="lowerThreshold" class="col-sm-2 control-label">Lower Threshold</label>
	<div class="col-sm-4">
		<input type="number" class="form-control" id="lowerThreshold" value="{{lowerThresholdVal}}">
	</div>
	<div class="col-sm-6">
		<div class="checkbox">
			<label id="lowerNotification">
				<input type="checkbox" {{lowerChecked}}>Notification
			</label>
		</div>
	</div>
</div>

<div class="form-group">
	<label for="upperThreshold" class="col-sm-2 control-label">Upper Threshold</label>
	<div class="col-sm-4">
		<input type="number" class="form-control" id="upperThreshold" value="{{upperThresholdVal}}">
	</div>
	<div class="col-sm-6">
		<div class="checkbox">
			<label id="upperNotification">
				<input type="checkbox" {{upperChecked}}>Notification
			</label>
		</div>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<button type="submit" class="btn btn-primary">Update Thresholds</button>
	</div>
</div>
